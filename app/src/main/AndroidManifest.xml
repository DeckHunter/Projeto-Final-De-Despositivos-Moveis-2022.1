        <activity
            android:name=".activity.CardapioActivity"
            android:parentActivityName=".activity.HomeActivity" />
        <activity
            android:name=".activity.ConfiguracoesUsuario"
            android:parentActivityName=".activity.HomeActivity" />
        <activity
            android:name=".activity.NovoProdutoConfeitaria"
            android:parentActivityName=".activity.ConfeitariaActivity" />
        <activity
            android:name=".activity.ConfiguracoesConfeitaria"
            android:parentActivityName=".activity.ConfeitariaActivity" />
        <activity android:name=".activity.ConfeitariaActivity" />
        <activity android:name=".activity.HomeActivity" />
        <activity android:name=".activity.Login_Activity" />
        <activity android:name=".activity.MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>