<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".activity.NovoProdutoConfeitaria">

    <include
        android:id="@+id/include"
        layout="@layout/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"></include>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="16dp">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/imageProduto"
                android:layout_width="wrap_content"
                android:layout_height="120dp"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="8dp"
                app:srcCompat="@drawable/perfil" />

            <ImageView
                android:id="@+id/abrir_Camera"
                android:layout_width="60dp"
                android:layout_height="120dp"
                android:layout_weight="0"
                app:srcCompat="@drawable/ic_camera_alt_black_24dp" />

        </LinearLayout>

        <EditText
            android:id="@+id/nome_produto"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:layout_marginBottom="5dp"
            android:background="@drawable/bg_edit_text"
            android:ems="10"
            android:hint="Nome Da Produto"
            android:inputType="text"
            android:padding="16dp" />

        <EditText
            android:id="@+id/descricao_produto"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:layout_marginBottom="5dp"
            android:background="@drawable/bg_edit_text"
            android:ems="10"
            android:hint="Descrição"
            android:inputType="text"
            android:padding="16dp" />

        <EditText
            android:id="@+id/calorias_produto"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:layout_marginBottom="5dp"
            android:background="@drawable/bg_edit_text"
            android:ems="10"
            android:hint="Calorias Do Produto"
            android:inputType="numberDecimal"
            android:padding="16dp" />

        <EditText
            android:id="@+id/preco_produto"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:layout_marginBottom="5dp"
            android:background="@drawable/bg_edit_text"
            android:ems="10"
            android:hint="Preço Do Produto"
            android:inputType="numberDecimal"
            android:padding="16dp" />

        <Button
            android:id="@+id/salvar_produto"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:background="#D179AF"
            android:onClick="ValidarDadosProduto"
            android:text="Salvar" />

    </LinearLayout>

</LinearLayout>